@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePOST">
	<input asp-for=Id hidden />
    <div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Удалить категорию</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">Название категории</label>
			<input asp-for="Name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Индекс порядка отображения</label>
			<input asp-for="DisplayOrder" class="form-control" disabled/>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Назад к списку
		</a>
	</div>
</form>
